<!DOCTYPE html>
<html>
<head>
  <title>Control Lights</title>
</head>
<body>
  <h1>Control Lights</h1>
  <button onclick="controlLightsFromFile()">Control Lights from File</button>

  <script>
    async function controlLightsFromFile() {
      // Make an API call to the server to control the lights from the file
      try {
        const response = await fetch('/control-lights-from-file', {
          method: 'POST',
        });

        if (response.ok) {
          alert('Lights control request sent.');
        } else {
          alert('Error sending lights control request.');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error communicating with the server.');
      }
    }
  </script>
</body>
</html>
