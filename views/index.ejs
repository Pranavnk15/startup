<!DOCTYPE html>
<html>
<head>
    <title>YOLOv3 Detection</title>
</head>
<body>
    <div id="detection-results"></div>

    <script>
        async function fetchDetectionResults() {
            try {
                const response = await fetch('http://localhost:3000/get_detection_results');
                const results = await response.json();

                // Display detection results on the HTML page
                document.getElementById('detection-results').innerText = JSON.stringify(results, null, 2);
            } catch (error) {
                console.error('Error fetching detection results:', error);
            }
        }

        // Fetch detection results periodically
        setInterval(fetchDetectionResults, 2000); // Update every 2 seconds
    </script>
</body>
</html>
